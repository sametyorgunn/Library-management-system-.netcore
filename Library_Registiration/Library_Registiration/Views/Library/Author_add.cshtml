@model Author
@{
    ViewData["Title"] = "Author_add";
    Layout = "~/Views/Shared/_LibraryLayout.cshtml";
}



<form method="post" enctype="multipart/form-data">

    <div class="form-group">
        <label for="exampleFormControlInput1">Yazar adı</label>
        <input type="text" name="Author_name" class="form-control" id="exampleFormControlInput1" placeholder="">
        <span asp-validation-for="Author_name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="exampleFormControlInput1">Yazar Yaş</label>
        <input type="text" name="Author_age" class="form-control" id="exampleFormControlInput1" placeholder="">
        <span asp-validation-for="Author_age" class="text-danger"></span>
    </div>

   

    <div class="form-group">
        <label for="exampleFormControlTextarea1">Yazar Hakkında</label>
        <input class="form-control" name="Author_about" id="exampleFormControlTextarea1" rows="4"/>
        <span asp-validation-for="Author_about" class="text-danger"></span>
    </div>
     <div class="mb-3">
        <label for="formFile" class="form-label">Default file input example</label>
        <input class="form-control" name="Author_resim" type="file" id="formFile">
    </div>
    <br>
    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>



