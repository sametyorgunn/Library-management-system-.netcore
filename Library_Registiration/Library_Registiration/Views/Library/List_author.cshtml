@model IEnumerable<Author>
@{
    ViewData["Title"] = "List_author";
    Layout = "~/Views/Shared/_LibraryLayout.cshtml";
}

<table class="table">
  <thead>
    <tr>
      <th scope="col">id</th>
      <th scope="col">Yazar adı</th>
      <th scope="col">Yazar Yaşı</th>
      <th scope="col">Yazar Hakkında</th>
      <th scope="col">resim </th>
      <th scope="col">yazarı gör </th>
      <th scope="col">Düzenle</th>
      <th scope="col">Sil</th>
    </tr>
  </thead>
  <tbody>
      @foreach(var i in Model)
        {
         <tr>
          <th scope="row">@i.Author_id</th>
          <td>@i.Author_name</td>
          <td>@i.Author_age</td>
          <td>@i.Author_about</td>  

          <td><img src="~/Resimler/@i.Author_resim_yol" style="width:50%;"/></td>
          <td><a href="/Library/YazarDetay/@i.Author_id">Yazarı Gör</a></td> 
          <td><a href="~/Library/Edit_Author/@i.Author_id" class = "btn btn-warning">Düzenle</a></td>
          <td><a href="~/Library/Delete_Author/@i.Author_id" class="btn btn-danger">Sil</a></td>

        </tr> 
        }
       
  </tbody>
</table>


