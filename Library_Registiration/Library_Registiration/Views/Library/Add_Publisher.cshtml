@model Publisher
@{
    ViewData["Title"] = "Add_Publisher";
    Layout = "~/Views/Shared/_LibraryLayout.cshtml";
}

<form method="post" enctype="multipart/form-data">

    <div class="form-group">
        <label for="exampleFormControlInput1">Yayınevi adı</label>
        <input type="text" name="Publisher_name" class="form-control" id="exampleFormControlInput1" placeholder="">
        <span asp-validation-for="Publisher_name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="exampleFormControlInput1">Yayınevi Mail</label>
        <input type="email" name="Publisher_Mail" class="form-control" id="exampleFormControlInput1" placeholder="">
        <span asp-validation-for="Publisher_Mail" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="exampleFormControlInput1">Yayınevi hakkında</label>
        <input type="text" name="Publisher_About" class="form-control" id="exampleFormControlInput1" placeholder="">
        <span asp-validation-for="Publisher_About" class="text-danger"></span>
    </div>
     <div class="mb-3">
        <label for="formFile" class="form-label">Default file input example</label>
        <input class="form-control" name="publisher_Resim" type="file" id="formFile">
    </div>
    
    <br>
    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>



